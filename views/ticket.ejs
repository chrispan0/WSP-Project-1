<%- include Partials/header.ejs %> <%- include Partials/main_nav.ejs %>
<h1><%= title %></h1>
<p>
  Please submit a ticket below and one of our Helpdesk Technicians will be with
  you shortly.
</p>
<br />
<section id="contact" class="py-5">
  <div class="container">
    <h2 class="text-center mb-4">Submit a Ticket</h2>
    <form
      action="/create"
      method="post"
      enctype="application/x-www-form-urlencoded"
      class="row g-3"
    >
      <div class="col-md-6">
        <label for="name" class="form-label">Name:</label>
        <input
          type="text"
          id="name"
          name="name"
          class="form-control"
          placeholder="Add Name Here"
          required
        />
      </div>

      <div class="col-md-6">
        <label for="email" class="form-label">Email:</label>
        <input
          type="email"
          id="email"
          name="email"
          class="form-control"
          placeholder="Add Email Here"
          required
        />
      </div>

      <div class="col-md-12">
        <label for="title" class="form-label">Title:</label>
        <input
          type="text"
          id="title"
          name="title"
          class="form-control"
          placeholder="Add Title Here"
          required
        />
      </div>

      <div class="col-12">
        <label for="description" class="form-label">Description:</label>
        <textarea
          id="description"
          name="description"
          rows="5"
          class="form-control"
          placeholder="Add Description Here"
          required
        ></textarea>
      </div>

      <div class="col-md-6">
        <label for="type" class="form-label"
          >Please select the issue type</label
        >
        <select name="type" class="form-select" id="type" required>
          <option value="soft">Software</option>
          <option value="hard">Hardware</option>
          <option value="inq">Inquiry/Question</option>
          <option value="net">Network/WiFi</option>
        </select>
      </div>

      <div class="col-md-6">
        <label for="priority" class="form-label"
          >Please select the priority level</label
        >
        <select name="priority" class="form-select" id="priority" required>
          <option value="0">OnCall (After Hours)</option>
          <option value="1">Low</option>
          <option value="2">Medium (Default)</option>
          <option value="3">High</option>
          <option value="4">Urgent</option>
        </select>
      </div>

      <div class="col-12 text-center mt-4">
        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <button type="reset" class="btn btn-secondary">Reset</button>
      </div>
    </form>
  </div>
</section>
<%- include Partials/footer.ejs %>
